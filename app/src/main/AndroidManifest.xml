<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blogspot.atifsoftwares.takepicture_kotlin">
    <!-- Adding Camera, Write External Storage Permission -->
    <uses-feature
        android:name="android.hardware.Camera"
        android:required="true"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.example.footfit.option"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity android:name="com.example.footfit.preview"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity android:name="com.example.footfit.checkimage"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name="com.example.footfit.marks"
        android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name="com.example.footfit.result"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name="com.example.footfit.markguide"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name="com.example.footfit.markguideside"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name="com.example.footfit.markguidesidelateral"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name="com.example.footfit.marksidelateral"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name="com.example.footfit.markside"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name="com.example.footfit.guideline"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name="com.example.footfit.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
    </application>

</manifest>